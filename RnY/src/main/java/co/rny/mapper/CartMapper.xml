	    <!-- 장바구니 항목 조회 (업데이트 시 사용) -->
    <select id="selectCartItem" parameterType="int" resultType="co.rny.vo.CartVO">
        SELECT * FROM tbl_cart
        WHERE cart_no = #{cartNo}
    </select>

    <!-- 장바구니 항목 업데이트 -->
    <update id="updateCartItem" parameterType="co.rny.vo.CartVO">
        UPDATE tbl_cart
        SET quantity = #{quantity}
        WHERE cart_no = #{cartNo}
    </update>


