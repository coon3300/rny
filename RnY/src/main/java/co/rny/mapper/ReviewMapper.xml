	<insert id="addReview" parameterType="co.rny.vo.ReviewVO">
		INSERT INTO tbl_review (
		user_no, user_id, item_no, review_num, review_title,
		review_content, review_image, review_date, review_like
		) VALUES (
		#{userNo},
		#{userId},
		#{itemNo},
		review_seq.nextval,
		#{reviewTitle},
		#{reviewContent},
		null,
		SYSDATE,
		0
		)
	</insert>

</mapper>
